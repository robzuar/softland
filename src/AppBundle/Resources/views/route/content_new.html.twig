{% extends 'macros/base_ajax_new.html.twig' %}
{% block body %}
    <div class="row">
        <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        {{ form_start(form) }}
        {{ app_macros.app_style_form(form) }}
        <p>
            <button type="submit" name="submit" value="save" class="btn btn-primary">
                Guardar <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
            </button>
            <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info">
                Guardar y Nuevo <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
        </p>
        {{ form_end(form) }}
        <hr/>
        <div class="form-group">
            <a class="btn btn-default" href="{{ path(routes.index) }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Volver
            </a>
        </div>
    </div>

{% endblock %}
